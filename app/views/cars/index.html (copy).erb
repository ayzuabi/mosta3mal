<h1>Listing cars</h1>

<table>
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Color</th>
    <th>Type</th>
    <th>Year</th>
    <th>Short desc</th>
    <th>Long desc</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.make %></td>
    <td><%= car.model %></td>
    <td><%= car.color %></td>
    <td><%= car.type %></td>
    <td><%= car.year %></td>
    <td><%= car.short_desc %></td>
    <td><%= car.long_desc %></td>
    <td><%= car.owner %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

